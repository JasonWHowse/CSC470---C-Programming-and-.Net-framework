<Window x:Class="Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="320" MinHeight="420" MinWidth="300">
    <Grid x:Name="Background_Grid" Background="#102419" KeyDown="OnKeyDownHandler">
        <Rectangle x:Name="Inner_Box" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Height="360" Width="290" Stroke="Black" Fill="#08120c"/>
        <Label x:Name="Donation_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-130,-320,0,0" Height="30" Width="125" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="Donation_TextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="130,-320,0,0" Height="30" Width="125" BorderBrush="Black" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  TextChanged="DonationTextBoxDelta"/>
        <Button x:Name="Add_Charity_To_List_Button" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-240,0,0" Height="30" Width="255" Content="Button" BorderBrush="Black" Background="#101924" Foreground="#0000ff" Click="Add_Charity_To_List_Button_Click"/>
        <Label x:Name="Donation_To_Charity_List_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-185,-160,0,0" Height="30" Width="90" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <ScrollViewer HorizontalAlignment="center" VerticalAlignment="center" VerticalScrollBarVisibility="Auto" Height="160" Width="90" Margin="-185,40,0,0">
            <TextBlock x:Name="Donation_To_Charity_List_TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Height="Auto" Width="90" Text="TextBlock" Background="#102419" Foreground="#00ff00" MinHeight="160" TextAlignment="Center" />
        </ScrollViewer>
        <Label x:Name="Donation_To_List_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-160,0,0" Height="30" Width="90" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <ScrollViewer HorizontalAlignment="center" VerticalAlignment="center" VerticalScrollBarVisibility="Auto" Height="160" Width="90" Margin="0,40,0,0">
            <TextBlock x:Name="Donation_To_List_TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Height="Auto" Width="90" Text="TextBlock" Background="#102419" Foreground="#00ff00" MinHeight="160" TextAlignment="Center"/>
        </ScrollViewer>
        <Label x:Name="Donation_To_Upkeep_List_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="185,-160,0,0" Height="30" Width="90" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <ScrollViewer HorizontalAlignment="center" VerticalAlignment="center" VerticalScrollBarVisibility="Auto" Height="160" Width="90" Margin="185,40,0,0">
            <TextBlock x:Name="Donation_To_Upkeep_List_TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="90" Text="TextBlock" Background="#102419" Foreground="#00ff00" MinHeight="160" TextAlignment="Center"/>
        </ScrollViewer>
        <Label x:Name="Charity_Total_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-185,250,0,0" Height="30" Width="90" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0,0,0,0"/>
        <Label x:Name="Total_To_Charity_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-185,320,0,0" Height="30" Width="90" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="Donations_Total_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,250,0,0" Height="30" Width="90" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0,0,0,0"/>
        <Label x:Name="Total_To_Donations_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,320,0,0" Height="30" Width="90" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="Upkeep_Total_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="185,250,0,0" Height="30" Width="90" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0,0,0,0"/>
        <Label x:Name="Total_To_Upkeep_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="185,320,0,0" Height="30" Width="90" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Border  x:Name="Toastie" CornerRadius="10" Width="160" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" BorderThickness="1,1,1,1">
            <TextBlock x:Name="ToastieText"  TextAlignment="Center" Margin="1,1,1,1" TextWrapping="Wrap" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
