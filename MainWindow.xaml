<Window x:Class="Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300">
    <Grid x:Name="Background_Grid" Background="#102419">
        <Rectangle x:Name="Inner_Box" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Height="360" Width="280" Stroke="Black" Fill="#08120c"/>
        <Label x:Name="Donation_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-120,-300,0,0" Height="30" Width="100" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="Donation_TextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="120,-300,0,0" Height="30" Width="100" TextWrapping="Wrap" Text="TextBox" BorderBrush="Black" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="Total_To_Charity" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-120,-220,0,0" Height="30" Width="100" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="Add_Charity_To_List" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="120,-220,0,0" Height="30" Width="100" Content="Button" BorderBrush="Black" Background="#101924" Foreground="#0000ff"/>
        <Label x:Name="Donation_To_Charity_List_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-175,-140,0,0" Height="30" Width="80" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Rectangle x:Name="Donation_To_Charity_List_Rectangle" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-175,120,0,0" Height="220" Width="80" Stroke="Black"/>
        <TextBlock x:Name="Donation_To_Charity_List_TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-175,120,0,0" Height="220" Width="80" Text="TextBlock" TextWrapping="Wrap" Background="#102419" Foreground="#00ff00" TextAlignment="Center"/>
        <Label x:Name="Donation_To_List_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-140,0,0" Height="30" Width="80" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Rectangle x:Name="Donation_To_List_Rectangle" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,120,0,0" Height="220" Width="80" Stroke="Black"/>
        <TextBlock x:Name="Donation_To_List_TextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,120,0,0" Height="220" Width="80" Text="TextBlock" TextWrapping="Wrap" Background="#102419" Foreground="#00ff00" TextAlignment="Center"/>
        <Label x:Name="Donation_To_Upkeep_List_Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="175,-140,0,0" Height="30" Width="80" Content="Label" BorderBrush="Black" BorderThickness="1" Background="#102419" Foreground="#00ff00" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Rectangle x:Name="Donation_To_Upkeep_List_Rectangle" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="175,120,0,0" Height="220" Width="80" Stroke="Black"/>
        <TextBlock x:Name="Donation_To_Upkeep_List_TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="175,120,0,0" Height="220" Width="80" Text="TextBlock" TextWrapping="Wrap" Background="#102419" Foreground="#00ff00" TextAlignment="Center"/>
    </Grid>
</Window>
