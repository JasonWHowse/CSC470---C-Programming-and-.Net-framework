<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid Background="LightGray">
        <Button Height="30" Width="30" Margin="-60,-120,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="1" Click="Button_Click" BorderThickness="1,1,1,1">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Height="30" Width="30" Margin="0,-120,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="2" Click="Button_Click"/>
        <Button Height="30" Width="30" Margin="60,-120,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="3" Click="Button_Click"/>
        <Button Height="30" Width="30" Margin="-60,-60,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="4" Click="Button_Click"/>
        <Button Height="30" Width="30" Margin="0,-60,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="5" Click="Button_Click"/>
        <Button Height="30" Width="30" Margin="60,-60,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="6" Click="Button_Click"/>
        <Button Height="30" Width="30" Margin="-60,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="7" Click="Button_Click"/>
        <Button Height="30" Width="30" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="8" Click="Button_Click"/>
        <Button Height="30" Width="30" Margin="60,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="9" Click="Button_Click"/>
        <Button Height="30" Width="30" Margin="-60,60,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="C" Click="Button_Click"/>
        <Button Height="30" Width="30" Margin="0,60,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="0" Click="Button_Click"/>
        <Button Height="30" Width="30" Margin="60,60,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="#" Click="Button_Click"/>
    </Grid>
</Window>
